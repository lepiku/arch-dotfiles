{
  "sway/workspaces": {
    "enable-bar-scroll": true,
    "disable-scroll-wraparound": true,
    "all-outputs": false,
    "format": "{icon}{name}",
    "format-icons": {
      "1: main": "ï„¡",
      "2: app": "ï—¼",
      "3: term": "ï„ ",
      "4: browser": "<span color=\"#FF8C15\">î€‡</span>",
      "5: network": "ï›¿",
      "6: media": "ï€",
      "urgent": "ïª",
      "default": ""
    }
  },
  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>"
  },
  "sway/window": {
    "icon": true,
    "icon-size": 16,
    "format": "{shell}-{title}",
    "rewrite": {
      "xdg_shell-(.*)": "$1",
      "xwayland-(.*)": "[XWayland] $1",
      "-": ""
    }
  },
  "bluetooth": {
    "on-click": "blueman-manager",
    "format": "ïŠ” {status}",
    "format-connected": "ïŠ” {device_alias}",
    "format-connected-battery": "ïŠ” {device_alias} {device_battery_percentage}%",
    // "format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%"
  },
  "idle_inhibitor": {
    "tooltip": "true",
    "format": "{icon}",
    "format-icons": {
      "activated": "ï®",
      "deactivated": "ï°"
    }
  },
  "tray": {
    "spacing": 5
  },
  "clock": {
    "format": "ï€— {:%H:%M ï³ %e %b}",
    "tooltip-format": "<tt>{calendar}</tt>",
    "on-click": "gnome-calendar",
    "calendar": {
      "format": {
        "today": "<b>{}</b>"
      }
    }
  },
  "cpu": {
    "interval": "4",
    "format": "ï‹› {max_frequency}GHz | <span color=\"darkgray\">{usage}%</span>",
    "min-length": 16,
    "max-length": 16,
    "on-click": "foot -e htop --sort-key PERCENT_CPU",
    "tooltip": true
  },
  "temperature": {
    //"thermal-zone": 0,
    "hwmon-path": "/sys/class/hwmon/hwmon6/temp1_input",
    "interval": "4",
    "critical-threshold": 80,
    "format-critical": "ï± {temperatureC}Â°C",
    "format": "{icon} {temperatureC}Â°C",
    "format-icons": ["ï«", "ï‹‰", "ï©"],
    "max-length": 7,
    "min-length": 7,
    "tooltip": false
  },
  "memory": {
    "interval": 10,
    "format": "ï”¸ {used} GB",
    "min-length": 11,
    "max-length": 11
  },
  "network": {
    // (Optional) To force the use of this interface,
    //"interface": "wlan0",
    "format-wifi": "ï‡« {essid}",
    "format-ethernet": "{ifname}: {ipaddr}/{cidr} ï–",
    "format-linked": "{ifname} (No IP) ï–",
    "format-disconnected": "ï„§",
    "format-alt": "{ifname}: {ipaddr}/{cidr}",
    "family": "ipv4",
    "tooltip-format-wifi": "ï‡« {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nï‚“ {bandwidthUpBits} ï€™ {bandwidthDownBits}",
    "tooltip-format-ethernet": "ï– {ifname}\nIP: {ipaddr}\nï‚“ {bandwidthUpBits} ï€™ {bandwidthDownBits}"
  },
  "pulseaudio": {
    "scroll-step": 2, // %, can be a float
    "format": "{icon} {volume}% {format_source}",
    "format-bluetooth": "{volume}% {icon} ïŠ” {format_source}",
    "format-bluetooth-muted": "ïš©  {icon} ïŠ” {format_source}",
    "format-muted": "ïš©  {format_source}",
    "format-source": "ï„°",
    "format-source-muted": "ï„±",
    "format-icons": {
      "headphone": "ï€¥",
      "hands-free": "ï–",
      "headset": "ï–",
      "phone": "ï‚•",
      "portable": "ï‚•",
      "car": "ï†¹",
      "default": ["ï€¦", "ï€§", "ï€¨"]
    },
    "on-click": "pavucontrol",
    "on-click-right": "pactl set-source-mute @DEFAULT_SOURCE@ toggle"
  },
  "battery": {
    "bat": "BAT0",
    "interval": 5,
    //"design-capacity": true,
    "states": {
      "warning": 20,
      "critical": 12
    },
    "format": "{capacity}% {icon}",
    "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"],
    "max-length": 25
  },
  "custom/scratchpad-indicator": {
    "interval": 3,
    "return-type": "json",
    "exec": "swaymsg -t get_tree | jq --unbuffered --compact-output '( select(.name == \"root\") | .nodes[] | select(.name == \"__i3\") | .nodes[] | select(.name == \"__i3_scratch\") | .focus) as $scratch_ids | [..  | (.nodes? + .floating_nodes?) // empty | .[] | select(.id |IN($scratch_ids[]))] as $scratch_nodes | { text: \"\\($scratch_nodes | length)\", tooltip: $scratch_nodes | map(\"\\(.app_id // .window_properties.class) (\\(.id)): \\(.name)\") | join(\"\\n\") }'",
    "format": "{} ï„",
    "on-click": "exec swaymsg 'scratchpad show'",
    "on-click-right": "exec swaymsg 'move scratchpad'"
  }
