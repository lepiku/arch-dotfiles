bindsym $mod+Shift+9 move container to workspace $ws9; workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10; workspace $ws10

# change container layout (stacked and toggle split)
bindsym $mod+s layout toggle split
bindsym $mod+Shift+s layout stacking

# enter fullscreen mode for the focused container and tabbed layout
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+f layout tabbed

# split toggle
bindsym $mod+x split toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent or child container
bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child

# reload the configuration file
bindsym $mod+r reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# power modes
set $mode_power "[E]xit | [L]ock | sus[P]end | [R]eboot | [S]hutdown"
mode $mode_power {
    bindsym e exec --no-startup-id sh "$HOME/bin/i3exit.sh"; exec i3-msg exit
    bindsym l exec --no-startup-id lock, mode "default"
    bindsym p exec --no-startup-id $suspend, mode "default"
    bindsym r exec --no-startup-id $reboot
    bindsym s exec --no-startup-id $shutdown
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+p mode $mode_power

