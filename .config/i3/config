# ---------- Browser Shortcut Mode ---------- #
set $mode_browser "Browser Shortcut"
mode $mode_browser {
    bindsym s exec firefox --new-window "https://soundcloud.com/", mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+$alt+b mode $mode_browser

