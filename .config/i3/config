set $mod Mod4
set $alt Mod1
set $term urxvtc
set $terme urxvtc -e
set $termi urxvtc -e zsh -ic
set $shutdown systemctl poweroff
set $suspend systemctl suspend
set $reboot systemctl reboot
set $logoff i3-msg exit

# set variabled for resizing
set $resizeFloat 20
set $resizeTile 2

# set size for focused border
for_window [class="^.*"] border pixel 2
#for_window [title="albert â€” Albert"] border pixel 0
for_window [class="jetbrains-studio" window_type="dialog" title="^win\d+$"] border pixel 0
for_window [class="jetbrains-studio" title="^win\d+$"] focus
for_window [class="firefox" window_role="Popup"] border pixel 0

# set gaps
gaps inner 8

# font
font pango:Source Code Pro Medium 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# adjust backlight
bindsym XF86MonBrightnessUp exec --no-startup-id sh -c 'sudo tee /sys/class/backlight/intel_backlight/brightness <<<$(( $(cat /sys/class/backlight/intel_backlight/brightness) + 10 ))'
bindsym XF86MonBrightnessDown exec --no-startup-id sh -c 'sudo tee /sys/class/backlight/intel_backlight/brightness <<<$(( $(cat /sys/class/backlight/intel_backlight/brightness) - 10 ))'

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $term
bindsym $mod+Shift+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

