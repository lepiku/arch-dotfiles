bindsym $mod+$alt+Shift+j gaps inner current plus 4
bindsym $mod+$alt+Shift+k gaps inner current minus 4
bindsym $mod+$alt+Shift+l gaps outer current plus 4
bindsym $mod+$alt+Shift+0 gaps inner current set 8; gaps outer current set -8

