# basic
#alias sudo="sudo -E"

# configs
alias rc="nvim ~/.zshrc"
alias nvimrc="nvim ~/.config/nvim/init.vim"
alias i3config="nvim ~/.config/i3/config"
alias zshalias="nvim ~/.zsh_aliases"
alias nvimft="nvim ~/.config/nvim/ftplugin"
alias conda-run="source ~/scripts/conda-run.sh"

# projects
alias helios=". ~/Projects/compfest/delivery.env.sh && cd ~/Projects/compfest/helios-return"
alias black-manta="cd ~/Projects/compfest/black-manta"
alias zeus="cd ~/Projects/compfest/zeus"
alias praktekiin="conda deactivate && conda activate praktekiin && cd ~/Projects/django/praktekiin"
alias alkhwarizmi="conda deactivate && conda activate itf && cd ~/Projects/it-force/alkhwarizmi"
alias adpro="cd ~/Projects/adpro/chroom-eatery"
alias ppw-lab="conda deactivate && conda activate ppw-lab && cd ~/Projects/ppw/ppw-lab"
alias iguide="cd ~/Projects/flutter/iguide"
alias basdat="conda deactivate && conda activate basdat && export LOCAL_DATABASE_URL='postgres://localhost:5432/dimas?currentSchema=medikago' && cd ~/Projects/django/medika-go"

# search inside files
alias search="grep -Rne"
alias isearch="grep -Rnie"

# git aliases
alias gitpullall='find . -mindepth 1 -maxdepth 1 -type d -print -exec git -C {} pull \;'
alias git-commit-no-message="git commit --allow-empty-message -m ''"
alias git-reset='git checkout HEAD --'

# other
alias restart-wifi="sudo systemctl restart wpa_supplicant@wlp2s0.service"
alias restart-network="sudo systemctl restart systemd-networkd.service"
alias diff="colordiff"
alias incognito="unset HISTFILE"
